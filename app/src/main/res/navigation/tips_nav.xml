<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tips_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="dev.mrbe.mztips.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_tipsFragment"
            app:destination="@id/tipsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_prviousOddsFragment"
            app:destination="@id/prviousOddsFragment" />
    </fragment>
    <fragment
        android:id="@+id/tipsFragment"
        android:name="dev.mrbe.mztips.TipsFragment"
        android:label="fragment_tips"
        tools:layout="@layout/fragment_tips" />
    <fragment
        android:id="@+id/prviousOddsFragment"
        android:name="dev.mrbe.mztips.PreviousOddsFragment"
        android:label="fragment_prvious_odds"
        tools:layout="@layout/fragment_prvious_tips" />
</navigation>